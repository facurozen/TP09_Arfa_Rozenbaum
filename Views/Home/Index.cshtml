@{
    ViewData["Title"] = "Home Page";
}

<div class="containerIndex">
    <div class="container">
        <div class="row justify-content-center mt-5">
            @foreach (Pelicula p in ViewBag.ListaPeliculas)
            {
                <div class="col-md-2">
                    <div class="card">
                        <img src="\@p.Portada" alt="@p.Nombre" class="card-img-top">
                    </div>
                    <div class="card-body">
                        <a href='@Url.Action("Reproductor","Home",new{IdPelicula=@p.IdPelicula})'>@p.Nombre</a>
                    </div>
                    <h5 class="card-title">@p.Nombre</h5>
                </div>
            }
        </div>
    </div>

</div>
