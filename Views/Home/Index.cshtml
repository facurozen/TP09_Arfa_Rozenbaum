@{
  ViewData["Title"] = "Home Page";
}

<div class="containerIndex">

 <form method="post" action='@Url.Action("IndexPorGenero","Home")'>
  <select style="width: 15%; margin:20px;" class="form-select" aria-label="Default select example" name="IdGenero">
    <option selected>Categorias</option>
    @foreach (Genero item in ViewBag.ListaGeneros)
    {
      <option value="@item.IdGenero">@item.NombreGenero</option>
    }
  </select>
  <input type="submit" value ="Filtrar">
</form>

@* <h4 style="font-family: 'Poppins';  margin:10px 20px; color:white; padding-top:5% @ViewBag.NombreGenero"></h4> *@
  <h4 style="font-family: 'Poppins';  margin:10px 20px; color:white; padding-top:5%">Destacadas</h4>

  <div class="destacados">
    @foreach (Pelicula pelicula in ViewBag.ListaPeliculas)
    {
      <div class="pelicula" style="background-image: url('/@pelicula.Portada');">
        <a href='@Url.Action("Reproductor","Home",new{IdPelicula = pelicula.IdPelicula})'>
          <div class = "botonReproductor">
          <button class="bi bi-play-btn-fill"></button>
          </div>
        </a>
        <div class="bottom">
          <button class="fa-regular fa-heart" onclick="darLike(@pelicula.IdPelicula)" id="CantidadLikes_@pelicula.IdPelicula">&nbsp;@pelicula.CantLikes</button>
          <button class="fa-regular fa-comment-plus" onclick="escribirComentario(@pelicula.IdPelicula)" data-toggle="modal" data-target="#ModalComentario"></button>
          <button class="fa-solid fa-comment" onclick="mostrarComentario(@pelicula.IdPelicula)" data-toggle="modal" data-target="#ModalMostrarComentario"></button>
        </div>
      </div>
    }
  </div>

  <!-- Modal -->
  <div class="modal fade" id="ModalComentario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel">Insertar comentario</h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
          <form method="post" action='@Url.Action("escribirComentario","Home")'>
            <input type="hidden" name="IdPelicula" id="IdPelicula">
            <input type="text" name="Texto" placeholder="Ingrese un comentario" id= "texto">
            <button type="submit" class="btn btn-primary">Save changes</button>
          </form>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>

  <div class="modal fade" id="ModalMostrarComentario" tabindex="-1" role="dialog" aria-labelledby="exampleModalLabel"
    aria-hidden="true">
    <div class="modal-dialog" role="document">
      <div class="modal-content">
        <div class="modal-header">
          <h5 class="modal-title" id="exampleModalLabel"></h5>
          <button type="button" class="close" data-dismiss="modal" aria-label="Close">
            <span aria-hidden="true">&times;</span>
          </button>
        </div>
        <div class="modal-body">
        <div id="Texto"></div>
        </div>
        <div class="modal-footer">
          <button type="button" class="btn btn-secondary" data-dismiss="modal">Close</button>
        </div>
      </div>
    </div>
  </div>
  
</div>